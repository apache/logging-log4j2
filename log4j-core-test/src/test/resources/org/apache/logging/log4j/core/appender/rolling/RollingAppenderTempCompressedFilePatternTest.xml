<Configuration status="OFF" name="RollingAppenderTempCompressedFilePatternTest">
  <Appenders>
    <Console name="STDOUT">
      <PatternLayout pattern="%m%n"/>
    </Console>
    <RollingFile name="RollingFile"
                 fileName="${test:logging.path}/logs/rollingtest.log"
                 filePattern="${test:logging.path}/logs/rollingtest-%i.log.gz"
                 createOnDemand="true">
      <PatternLayout />
      <SizeBasedTriggeringPolicy size="500" />
      <DefaultRolloverStrategy
          fileIndex="nomax"
          tempCompressedFilePattern="${test:logging.path}/tmp/rollingtest-%i.log.gz.tmp"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <Root level="DEBUG">
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>

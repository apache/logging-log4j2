<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF">
  <Appenders>
    <File name="File" 
          fileName="target/AsyncLoggerConfigTest2.log" 
          bufferedIO="false" 
          immediateFlush="true" 
          append="true">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %X{aKey} %m %location %ex%n</Pattern>
      </PatternLayout>
    </File>
  </Appenders>
  
  <Loggers>
    <AsyncRoot level="info">
      <AppenderRef ref="File"/>
    </AsyncRoot>
  </Loggers>
</Configuration>